FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including PostgreSQL development headers
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    libpq-dev \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r railway && useradd -r -g railway railway

# Copy requirements and install Python dependencies
COPY requirements.railway.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Set proper permissions
RUN chown -R railway:railway /app
USER railway

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# Railway uses the PORT environment variable
EXPOSE $PORT

# Run the application with Railway's PORT
CMD ["python", "enhanced_main.py"]
